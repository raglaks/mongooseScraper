<div class="container">

    <br>

    <div class="row text-center">

        <div class="col-lg-1"></div>

        <div class="col-lg-10">

            <h1>AP SCRAPER</h1>

        </div>

        <div class="col-lg-1"></div>

    </div>

    <br>

    <div class="row text-center">

        <div class="col-lg-2"></div>

        <div class="col-lg-8">

            {{#each .}}

            {{#if this.headline}}

            <a href={{url}} target="_blank">{{headline}}</a>
            <p>{{desc}}<button type="button" class="btn btn-info comm" id={{_id}}>Comment</button></p>

            {{#if this.comments}}

            <p><strong>Comments:</strong></p>

            {{#each this.comments}}

            <p><strong>{{title}}:</strong> {{body}} <button type="button" class="btn btn-outline-warning delComm" id={{_id}}>Edit/Delete</button></p>

            <div id="edel" class="modal fade text-center" role="dialog">

                <div class="modal-dialog">

                    <div class="modal-content">

                        <div class="modal-header">

                            <h3 class="modal-title"><strong>Edit/delete comment</strong></h3>

                        </div>

                        <div class="modal-body">

                            <form>

                                <div class="form-group">

                                    <textarea class="form-control" id="edTitle" rows="1" placeholder="Title"></textarea>

                                </div>

                                <div class="form-group">

                                    <textarea class="form-control" id="edComm" placeholder="Comment" rows="3"></textarea>

                                </div>

                                <p class="text-danger" id="eWarn"></p>

                                <button type="submit" class="btn btn-primary" id="edEd">Edit</button>

                                <button type="submit" class="btn btn-danger" id="eDel">Delete</button>

                            </form>

                            <br>

                        </div>

                        <div class="modal-footer">

                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                        </div>

                    </div>

                </div>

            </div>

            {{/each}}

            {{/if}}

            {{/if}}

            {{/each}}

        </div>

        <div class="col-lg-2"></div>

    </div>

    <div id="results-modal" class="modal fade text-center" role="dialog">

        <div class="modal-dialog">

            <div class="modal-content">

                <div class="modal-header">

                    <h3 class="modal-title"><strong>Comments</strong></h3>

                </div>

                <div class="modal-body">

                    <form>

                        <div class="form-group">

                            <input class="form-control" id="title" rows="1" placeholder="Title"></input>

                        </div>

                        <div class="form-group">

                            <textarea class="form-control" id="comment" rows="3" placeholder="Comment"></textarea>

                        </div>

                        <p class="text-danger" id="warn"></p>

                        <button type="submit" class="btn btn-primary" id="sub">Submit</button>

                    </form>

                    <br>

                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                </div>

            </div>

        </div>

    </div>

</div>